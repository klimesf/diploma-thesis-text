% (1), (2) atd. pomoci tikz knihovny
% pro vytvoreni zakrouzkovaneho pismena \circled{A} -> (A)
\RequirePackage{tikz}
\newcommand*\circled[1]{%
\begin{tikzpicture}[baseline=(C.base)]
\node[draw,circle,inner sep=.5pt,minimum size=2ex](C) {#1};
\end{tikzpicture}}
% cislovany seznam (1)
\newcommand\circledarabic{\protect\circled{\arabic*}}
% pismenny seznam (A)
\newcommand\circledAlph{\protect\circled{\Alph*}}
% pismenny seznam (a)
\newcommand\circledalph{\protect\circled{\alph*}}

